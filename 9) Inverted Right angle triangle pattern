import java.util.Scanner;
public class Invertedrightanglepattern{
    public static void main(String[] args){
        Scanner scanner=new Scanner(System.in);

        System.out.print("enter the number of rows:");
        int n=scanner.nextInt();

        int i,j;
        for(i=n;i>=1;i--){
            for(j=1;j<=i;j++){
                System.out.print("*");
            }
        
            System.out.println();
        }
    }
}
