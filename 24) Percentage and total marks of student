import java.util.Scanner;
public class studentmarks{
    public static void main(String[] args){
        Scanner scanner=new Scanner(System.in);
        int a,b,c,total;
        System.out.print("enter the marks1:");
        a=scanner.nextInt();
        System.out.print("enter the marks2:");
        b=scanner.nextInt();
        System.out.print("enter the marks3:");
        c=scanner.nextInt();
        total=a+b+c;
        double percentage=(a+b+c)/3.0f;
        System.out.println("student total marks is:"+total);
        System.out.println("student percentage is:"+percentage+"%");
        
    }
}
